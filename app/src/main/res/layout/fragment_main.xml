<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shyamalpunekar.tasktimer.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No tasks being timed"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.066" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Use the add button (+) in the toolbar above to create new task."

        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.194" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tasks with lower sort orders will be placed higher up the list. Tasks with the same sort order will be sorted alphabetically."
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tapping a task will start the timer for that task (and will stop the timer for any previous task that was being timed)."
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.355" />



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Each task has Edit and Delete buttons if you want to change the details or remove the task"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.78" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Add Tasks"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="391dp" />

</android.support.constraint.ConstraintLayout>
